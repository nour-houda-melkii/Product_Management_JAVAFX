                        <TableColumn fx:id="descriptionColumn" prefWidth="250.0" text="Description" />
                        <TableColumn fx:id="actionColumn" prefWidth="100.0" text="Action" />
                    </columns>
                </TableView>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="672.0" spacing="20.0">
