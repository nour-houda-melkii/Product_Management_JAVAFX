<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.ProductDetailsController"
      spacing="10" alignment="center"
      style="-fx-padding: 20px; -fx-background-color: #ffffff;">

    <Label fx:id="titleLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <ImageView fx:id="eventImage" fitWidth="300" fitHeight="200"/>

    <Label text="First Name:"/>
    <TextField fx:id="firstNameField"/>

    <Label text="Last Name:"/>
    <TextField fx:id="lastNameField"/>

    <Label text="Email:"/>
    <TextField fx:id="emailField"/>

    <Label text="Phone:"/>
    <TextField fx:id="phoneField"/>

    <Button text="Reserve" onAction="#handleReservation"/>
</VBox>
