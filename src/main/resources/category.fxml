<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.CategoryController" spacing="10">
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>

    <HBox alignment="CENTER_RIGHT">
        <Button text="Back to Dashboard" onAction="#navigateToDashboard"
                style="-fx-background-color: #607D8B; -fx-text-fill: white;"/>
    </HBox>

    <TableView fx:id="categoryTable">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="200"/>
            <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="300"/>
        </columns>
    </TableView>

    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
        </padding>

        <Label text="Category Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200"/>

        <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="descriptionField" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="200"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Add" onAction="#addCategory" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Update" onAction="#updateCategory" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        <Button text="Delete" onAction="#deleteCategory" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>
</VBox>